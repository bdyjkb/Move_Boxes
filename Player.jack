class Player {
    
    field int unit;
    field int x, y;
    field String img;
    field int ref_x, ref_y;

    constructor Player new(int x, int y, int u){
        let unit = u;
        let ref_x = x;
        let ref_y = y;
		let img = "";
        return this;
    }

    method void set_pos(int pos_x, int pos_y){
        let x = pos_x;
        let y = pos_y;
        return;
    }
    
    method void draw(){
        var int i;
		var int r, c;
		var int div_r;
		let r = ref_x + (x * unit);
		let c = ref_y + (y * unit);
		do Screen.setColor(true);

		let i = 0;
		while(i < (unit * unit)){
			let div_r = i / unit;
			if(img.charAt(i) = 49){
				do Screen.drawPixel(r + (i - (unit * div_r)), c + div_r);
			}
			let i = i + 1;
		}
        return;
    }

    method void wipe(){
        var int i;
		var int r, c;
		var int div_r;
		let r = ref_x + (x * unit);
		let c = ref_y + (y * unit);
		do Screen.setColor(false);

		let i = 0;
		while(i < (unit * unit)){
			let div_r = i / unit;
			if(img.charAt(i) = 49){
				do Screen.drawPixel(r + (i - (unit * div_r)), c + div_r);
			}
			let i = i + 1;
		}
        return;
    }

    method void move(int next_x, int next_y){
        do wipe();
		let x = next_x;
		let y = next_y;
        do draw();
		return;
    }

	method int get_x(){
		return x;
	}
	method int get_y(){
		return y;
	}
}
